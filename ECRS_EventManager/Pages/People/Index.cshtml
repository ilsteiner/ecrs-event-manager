<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Person[0].CreatedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Person[0].UpdatedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Person[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Person[0].LastName)
